	</form>
	<form action="carList.do" method="post">
	<input type="hidden" name="schoolName" value="<%=name%>" />
		<input type="submit" value="차량관리">
	</form>
	<form action="beaconList.do" method="post">
	<input type="hidden" name="schoolName" value="<%=name%>" />
		<input type="submit" value="비콘관리" >
	</form>
	
	<form name=form method="post" action="beaconDelete.do">
	<table border="1">
 	<%
 	
 	out.println("<TR><td>선택</td><td>학원명</td><td>비콘이름</td><td>비콘고유번호</td><td>용도</td><td>등록날짜</td></TR>");
 	Beacon_Dto dto = new Beacon_Dto();
 	
 	
 	out.println(request.getAttribute("schoolName"+"              아아ㅏ"));
 	for (int i = 0; i < dtos.size(); i++) {
 		dto = dtos.get(i);
 		out.println("<TR>");
 		%>
 		<td>
        <input type=checkbox name=check value="<%=dto.GetIdentifier()%>">
   		 </td>
    <%
 		//out.println("<td>" + request.getParameter("schoolName") + "</td>");
 		out.println("<td>" + dto.GetSchoolName() + "</td>");
 		out.println("<td>" + dto.GetBeaconName() + "</td>");
 		out.println("<td>" + dto.GetIdentifier() + "</td>");
 		out.println("<td>" + dto.GetIsCar() + "</td>");
 		out.println("<td>" + dto.GetMakeDate() + "</td>");
 		out.println("</TR>");

 	}
 	name = request.getParameter("schoolName");
 %>

	</table>
<input type="submit" value ="선택값 삭제">
<input type="hidden" name="schoolName" value="<%=name%>" />
   </form>
	
	
	<form action="beaconAdd.do" method="post">
